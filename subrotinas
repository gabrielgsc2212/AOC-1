.data
	inicio: .asciiz "Digite um número: "
	par: .asciiz "O numero eh par."
	impar: .asciiz "O numero eh impar."
	
.text
	la $a0, inicio
	jal imprimeString
	jal LeInteiro
	
	move $a0, $v0
	jal ehImpar
	beq $v0, $zero, imprimePar
	la $a0, impar
	jal imprimeString
	jal EncerraPrograma
	
	imprimePar:
		la $a0, par
		jal imprimeString
		jal EncerraPrograma
		
	ehImpar:
		li $t0, 2
		div $a0, $t0
		
		mfhi $v0
		jr $ra
		
	#recebe uma string em $a0 e a imprime 
	imprimeString:
		li $v0, 4
		syscall
		jr $ra
		
	#le o valor escrito e salva em $v0
	LeInteiro:
		li $v0, 5
		syscall
		jr $ra
		
	EncerraPrograma:
		li $v0, 10
		syscall